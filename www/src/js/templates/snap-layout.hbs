<div class="row">
  <div class="col-2">
    <div class="b-icon-wrapper">
      <img class="b-icon" src="{{ icon }}" width="125" height="125">
    </div>
  </div>
  <div class="col-6">
    <h1 class="b-snap__title">{{ name }}</h1>
    <div class="b-snap__developer">By {{ developer }}</div>
  </div>
</div>

<div class="row">
  <div class="col-2" style="float: right">
    {{> installer}}
  </div>
</div>

<div class="row">

  <div class="col-7">
    <div class="row">
      <div class="col-7">
        Size
      </div>
      <div class="col-5">
        <div class="b-snap__size">{{ size }}</div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-7">
        Version
      </div>
      <div class="col-5">
        <div class="b-snap__version">{{ version }}</div>
      </div>
    </div>
  </div>

  <div class="col-5">
    Interfaces
    <div>
      <ul id="interfaces">
      </ul>
    </div>
  </div>
  
</div>

<div class="row">
  <div class="col-8">
    <h3>About</h3>
      {{#if description}}
      <p>{{ description }}</p>
      {{/if}}
    </div>
</div>
