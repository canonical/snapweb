<div class="twelve-col last-col" style="border: 1px solid #d2d2d2; padding: 50px">

  <div class="b-snaplist__icon-wrapper" style="padding: 10px 10px; width: 20%">
    <img class="b-snaplist__icon" style="margin: 0px" src="{{ icon }}">
  </div>

  <div class="b-snaplist__meta" style="float: right; width: 70%;">
    <div class="b-snaplist__id">
      <h3 class="b-snaplist__name">{{ name }}</h3>
      <p class="b-snaplist__version">{{ version }}</p>
    </div>
    <div class="b-snaplist__src">
      <div class="b-snaplist__developer">By {{ developer }}</div>
    </div>
    <div class="b-snaplist__size" title="Installed file size">{{ prettyInstalledSize }}</div>
    <div class="b-snaplist__actions">
      {{> installer installerClass="b-installer_small"}}
    </div>
  </div>

</div>
